<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_view_recipe"
    tools:context=".fragments.Home.ViewRecipe.ViewRecipeFragment">


    <Button
        android:id="@+id/btBackOnViewRecipe"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:insetLeft="8dp"
        android:insetTop="8dp"
        android:text="@string/back" />

    <TextView
        android:id="@+id/tVViewRecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/btBackOnViewRecipe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/btBackOnViewRecipe"
        app:layout_constraintTop_toTopOf="@id/btBackOnViewRecipe" />

    <ImageView
        android:id="@+id/iVViewRecipeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tVViewRecipeDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tVViewRecipeName" />

    <TextView
        android:id="@+id/tVViewRecipeDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iVViewRecipeImage" />

</LinearLayout>